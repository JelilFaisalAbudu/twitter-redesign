<div class="card border-0">
	<div class="header card-header tweets-header">
		<h4 class="feed-title">Tweets</h4>
	</div>
	<div class="card-body">
		<% @feed.each do |tweet| %>
		<p class="card-text">
			<div class="row mb-4">
				<div class=" col-12 mb-3">
					<article class="my-2">
						<div class="media d-flex">
							<img alt=" nigel-farage" class="opinion-img mr-3"
								data-src="https://d.newsweek.com/en/full/1563625/nigel-farage.png?w=63&amp;h=63&amp;f=241bf306fe74b397c2ecf4116cc79b62"
								src="https://d.newsweek.com/en/full/1563625/nigel-farage.png?w=63&amp;h=63&amp;f=241bf306fe74b397c2ecf4116cc79b62"
								title="nigel-farage">
							<div class="media-body flex-grow-1">
								<div>
									<div class="d-flex justify-content-between align-items-end">
										<div class="tag">

											<span class="name">
												<%= tweet.Author.FullName %>
											</span>
											<p class="handle text-muted">
												<%= "@#{tweet.Author.Username}" %>
											</p>
										</div>
										<small class="text-muted">
											<%= tweet.created_at.strftime("%a %m/%d/%y") %>
										</small>
									</div>
								</div>
								<p>
									<%= tweet.Text %>
								</p>
							</div>
						</div>
					</article>
				</div>
			</div>
		</p>
		<% end %>

	</div>
</div>
