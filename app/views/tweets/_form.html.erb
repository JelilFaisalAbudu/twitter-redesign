<div class="card border-0">

  <%= form_with(model: tweet, local: true) do |form| %>

  <div class="form-group">
    <div class="header new-tweet-header">
      <%= form.label :tweet, 'Start a new tweet'%>
    </div>
    <div class="card-body">
      <%= form.text_area :tweet, id: 'tweetFormControlTextarea1', class: 'form-control', row: '3' %>
      <div class="form-group">
        <%= form.submit 'Send', class: 'btn btn-primary my-2' %>
      </div>
    </div>
  </div>


  <% end %>

</div>