<div class="sign-up col-5 m-auto">
	<h2 class="header my-3 text-center">Sign up</h2>
	<%= form_with model: @user, local:true, id: 'sign-up-form' do |form| %>
		<!-- render 'layouts/error_messages', f: f.object -->
		<div class="form-group">
			<%= form.label :Username %>
			<%= form.text_field :Username, id: 'username', class: 'form-control' %>
		</div>
		<div class="form-group">
			<%= form.label :FullName, 'Full Name' %>
			<%= form.text_field :FullName, id: 'fullName', class: 'form-control' %>
		</div>
		<div class="form-group">
			<%= form.label :photo, 'Profile Photo' %><br>
			<%= form.file_field :photo, id: 'photo', class: 'form-contro' %>
		</div>
		<div class="form-group">
			<%= form.label :cover_image, 'Cover Image' %><br>
			<%= form.file_field :cover_image, id: 'coverImage', class: 'form-contro' %>
		</div>
		<div class="form-group">
      <%= form.submit 'Submit', class: 'btn btn-primary my-2' %>
    </div>
	<% end %>
</div>
