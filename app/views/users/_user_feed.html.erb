<div class="card border-0">
	<div class="header card-header tweets-header">
		<h4 class="feed-title">Tweets</h4>
	</div>
	<div class="card-body">
		<% current_user.tweets.each do |tweet| %>
			<p class="card-text">
			<div class="row mb-4">
				<div class=" col-12 mb-3">
					<article class="d-flex my-2">
						<a class=" px-2 text-center" href="#">
							<img alt=" nigel-farage" class="opinion-img"
								data-src="https://d.newsweek.com/en/full/1563625/nigel-farage.png?w=63&amp;h=63&amp;f=241bf306fe74b397c2ecf4116cc79b62"
								src="https://d.newsweek.com/en/full/1563625/nigel-farage.png?w=63&amp;h=63&amp;f=241bf306fe74b397c2ecf4116cc79b62"
								title="nigel-farage">
						</a>
						<div class="info pl-4 pl-lg-2">
							<%= tweet.Text %>
							<div class="byline text-muted">
								<%= tweet.created_at.strftime("%a %m/%d/%y") %>
							</div>
						</div>
					</article>
				</div>
			</div>
		</p>
		<% end %>
		
	</div>
</div>